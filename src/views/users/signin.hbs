<style>  
  body {
    background-image: url('/src/public/img/1.png');    
    background-size: 100% 105%;
  }
</style>


<div class="row row-cols-2 mt-5">
  <div class="col-md-4">

  </div>
  <div class="col-md-2 mr-5">

  </div>
  <div class="col-5 mx-auto">
    <div class="card mt-4 shadow-lg mb-5 bg-white rounded">      
      <div class="card-header text-center">
        <h1 class="h4">
          INICIAR SESIÓN
        </h1>
        <i class="fas fa-user-circle "></i>
      </div>
      <div class="card-body">
        <form action="/users/signin" method="POST" class="needs-validation" novalidate>
          <div class="form-group">
            <label for="username" class="col-form-label-lg"><i class="fas fa-id-card-alt"></i> Nombre de Usuario</label>
            <input type="text" id="username" class="form-control form-control-lg" name="username" required
              aria-describedby="usernamehelp">
            <div class="invalid-feedback">Ingresa tu nombre de usuario</div>
            <small id="usernamehelp" class="form-text text-muted">
              Nombre de usuario dado por la administración
            </small>
          </div>
          <div class="form-group">
            <label for="password" class="col-form-label-lg"><i class="fas fa-lock"></i> Contraseña</label>
            <input type="password" id="password" class="form-control form-control-lg" name="password" required
              aria-describedby="passwordhelp">
            <div class="invalid-feedback">Ingresa tu contraseña</div>
            <small id="passwordhelp" class="form-text text-muted">
              Contraseña asignada por la adminsitración
            </small>
          </div>
          <br>
          <button class="rounded-pill btn btn-primary btn-block btn-lg">
            Iniciar sesión <i class="fas fa-user-check"></i>
          </button>
          <br>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';
    window.addEventListener('load', function () {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function (form) {
        form.addEventListener('submit', function (event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>