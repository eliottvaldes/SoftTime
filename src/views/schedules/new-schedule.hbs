<div class="container">
    <div class="col-9 mx-auto mt-5 ">
        {{!-- inicio de la tarjeta --}}
        <div class="card shadow pb-3 mb-5 bg-white rounded">
            <div class="card-header text-center">
                <h3>Nuevo Pendiente <i class="fas fa-calendar-plus"></i></h3>
            </div>
            <div class="card-body">
