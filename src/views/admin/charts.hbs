<div class="container mx-auto mt-4 mb-3">
    <br>
    <hr>
    <H1>Graficos generales</H1>
    <br>

    <div id="chartPedidos"><div>
    <div id="chartPagos"></div>

    <br>
    <hr>
    <br>

</div>

<script>
    var fechasNOrders = [];
    var pedidosNOrders = [];
    var amount = 0;
    var max = 0;
    {{#each ordersData}}
        amount++;
        fechasNOrders.push(String( {{mes}} + "/" + {{dia}} + "/" + {{anio}} ));
        pedidosNOrders.push({{pedidos}});
    {{/each}}

    max = Math.max.apply(Math, pedidosNOrders);

    var optionsPedidos = {
        series: [{
            name: 'Pedidos',
            data: pedidosNOrders
        }],
        chart: {
            height: 350,
            type: 'line',
        },
        stroke: {
            width: 7,
            curve: 'smooth'
        },
        xaxis: {
            type: 'datetime',
            categories: fechasNOrders,
            tickAmount: amount,
            labels: {
                formatter: function (value, timestamp, opts) {
                    return opts.dateFormatter(new Date(timestamp), 'dd MMM')
                }
            }
        },
        title: {
            text: 'Pedidos hechos',
            align: 'left',
            style: {
                fontSize: "16px",
                color: '#666'
            }
        },
        fill: {
            type: 'gradient',
            gradient: {
                shade: 'dark',
                gradientToColors: ['#FDD835'],
                shadeIntensity: 1,
                type: 'horizontal',
                opacityFrom: 1,
                opacityTo: 1,
                stops: [0, 100, 100, 100]
            },
        },
        markers: {
            size: 4,
            colors: ["#FFA41B"],
            strokeColors: "#fff",
            strokeWidth: 2,
            hover: {
                size: 7,
            }
        },
        yaxis: {
            min: 0,
            max: max,
            title: {
                text: 'Pedidos',
            },
        }
    };

    var chartPedidos = new ApexCharts(document.querySelector("#chartPedidos"), optionsPedidos);
    chartPedidos.render();






    var fechasNSchedules = [];
    var dineroNSchedules = [];
    amount = 0;
    {{#each schedulesData}}
        amount++;
        fechasNSchedules.push(String( {{mes}} + "/" + {{dia}} + "/" + {{anio}} ));
        dineroNSchedules.push({{dinero}});
    {{/each}}
    max = Math.max.apply(Math, dineroNSchedules);
    var optionsPagos = {
        series: [{
            name: 'Cantidad',
            data: dineroNSchedules
        }],
        chart: {
            height: 350,
            type: 'line',
        },
        stroke: {
            width: 7,
            curve: 'smooth'
        },
        xaxis: {
            type: 'datetime',
            categories: fechasNSchedules,
            tickAmount: amount,
            labels: {
                formatter: function (value, timestamp, opts) {
                    return opts.dateFormatter(new Date(timestamp), 'dd MMM')
                }
            }
        },
        title: {
            text: 'Pagos',
            align: 'left',
            style: {
                fontSize: "16px",
                color: '#666'
            }
        },
        fill: {
            type: 'gradient',
            gradient: {
                shade: 'dark',
                gradientToColors: ['#FDD835'],
                shadeIntensity: 1,
                type: 'horizontal',
                opacityFrom: 1,
                opacityTo: 1,
                stops: [0, 100, 100, 100]
            },
        },
        markers: {
            size: 4,
            colors: ["#FFA41B"],
            strokeColors: "#fff",
            strokeWidth: 2,
            hover: {
                size: 7,
            }
        },
        yaxis: {
            min: 0,
            max: max,
            title: {
                text: 'Cantidad',
            },
        }
    };

    var chartPagos = new ApexCharts(document.querySelector("#chartPagos"), optionsPagos);
    chartPagos.render();


</script>